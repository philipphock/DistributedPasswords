<Page x:Class="DistributedPasswordsWPF.Unlock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DistributedPasswordsWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Unlock">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <PasswordBox HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Center" Height="55" Grid.Column="1" FontSize="24" Password="Test"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="50"/>

    </Grid>
</Page>
