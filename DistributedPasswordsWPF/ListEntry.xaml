<UserControl x:Class="DistributedPasswordsWPF.ListEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DistributedPasswordsWPF"
             mc:Ignorable="d" d:DesignWidth="800" Height="40">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Label Content="Label" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" FontSize="16"/>
        <Button Content="SELECT" Grid.Column="1" Margin="3,5"/>
        <Button Content="EDIT" Grid.Column="2" Margin="3,5"/>
        <Button Content="DEL" Grid.Column="3" Margin="3,5"/>

    </Grid>
</UserControl>
